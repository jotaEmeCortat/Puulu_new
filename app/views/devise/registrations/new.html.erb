<%= render 'shared/page_header', children: "Team's new account" %>

<div class="container wrapper login-box">

    <h2 class="bg-secondary h4 mb-4 px-3 py-2 fw-bold">
      Creating a new team account
    </h2>

    <div class="col-12 col-lg-5 mb-5">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :name,
                      label: "Team name",
                      required: true,
                      autofocus: true,
                      input_html: {placeholder:'Team Name'}%>

          <%= f.input :email,
                      label: 'Email Address',
                      required: true,
                      input_html: { placeholder:'Email Address' }%>

          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { placeholder:'Password' } %>

          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { placeholder:'Password Confirmation' } %>
          </div>

        <div class="d-flex form-actions justify-content-center mt-5">
          <%= f.button :submit, "Create new account", class:'btn btn-primary col-12 col-md-8' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
