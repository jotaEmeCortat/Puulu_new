<%= render 'shared/page_header', children: "Team account" %>

<div class="container wrapper login-box ">
  <div class="row justify-content-center">

    <div class="col-12 col-lg-5 mb-5">
      <h2 class="bg-secondary h4 mb-4 px-3 py-2 fw-bold" style="margin: 0 -1rem">
        Sign In
      </h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      label: 'Email Address',
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", placeholder:'Email Address' } %>
          <%= f.input :password,
                      required: false,
                      input_html: { placeholder:'Password' } %>
        </div>

        <div class="d-flex justify-content-between align-items-center">
          <%= link_to "Forgot your password?", new_password_path(resource_name),
          :class => "text-secondary h6 fw-bold"%>
          <%= f.button :submit, "Sign in", class: 'btn btn-primary w-50' %>
        </div>
      <% end %>
    </div>

    <div class="col-12 col-lg-5 mb-5">
      <h2 class="bg-secondary h4 mb-4 px-3 py-2 fw-bold" style="margin: 0 -1rem">
        Register
      </h2>

      <div class="bg-body-secondary p-4">
        <p class="fw-bold">Your team doesn't have an account?</p>
        <p class="h6 mb-3">In that case, you are missing out on:</p>
        <ul class="h6 mb-3">
          <li>Missing 1</li>
          <li>Missing 2</li>
          <li>Missing 3</li>
          <li>Missing 4</li>
        </ul>
        <%= link_to "Register", new_registration_path(resource_name), class: 'btn btn-secondary w-100' %>
      </div>
    </div>
  </div>
</div>
