<%= render 'shared/page_header', children: "Team account" %>

<div class="container wrapper">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 mb-5">
      <h2 class="h5 mb-3 fw-bold">Confirm email address</h2>
      <p>Forgotten your password? Enter your email address below, and we'll email instructions for setting a new one.</p>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      label: 'Email Address',
                      required: true,
                      autofocus: true,
                      input_html: { placeholder:'Email Address' } %>
        </div>

        <div class="d-flex form-actions justify-content-center">
          <%= f.button :submit, "reset password", class:'btn btn-primary col-12 col-md-8' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
