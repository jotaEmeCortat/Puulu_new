<%= render 'shared/page_header', children: "Edit player" %>

<div class="container wrapper login-box">
    <h2 class="bg-secondary h4 mb-4 px-3 py-2 fw-bold">
      Edit <%= @player.name %>
    </h2>

  <div class="row justify-content-center">
    <div class="col-5 mb-5">
      <%= simple_form_for [@player] do |f| %>
        <div class="form-inputs">
          <%= f.input :name,
                      label: "Player name",
                      required: true,
                      autofocus: true,
                      input_html: {data: {visibility_target: "nameInput"}}
          %>

          <%= f.input :nationality,
                      label: "Player nationality",
                      required: true
          %>

          <%= f.input :birthdate,
                      label: "Player birthdate",
                      start_year: Time.now.year - 123, end_year: Time.now.year - 18, order: %i(year)
          %>

          <%= f.input :gender,
                      label: "Player gender",
                      collection: ['Female', 'Male']
          %>

          <%= f.input :handedness,
                      label: "Player handedness",
                      collection: ['Left-Handed', 'Right-Handed']
          %>

          <%= f.input :position,
                      label: "Player position",
                      collection: ['Field Player', 'Goalkeeper']
          %>
          <%# <%= f.input :description, as: :text, :input_html => { 'rows' => 1 } %>
          <%# <%= f.input :photo, as: :file %>
          <%= f.input :available,
                      label: "Player availability"
          %>
        </div>

        <div class="d-flex form-actions justify-content-center mt-5">
          <%= f.submit "Update Player", class: 'btn btn btn-primary col-12 col-md-8' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
