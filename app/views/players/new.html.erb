<%= simple_form_for [@team, @player] do |f| %>
  <div class="">
    <%= f.input :name,
                label: 'Player Name',
                placeholder: "Player Name",
                required: true,
                autofocus: true,
                input_html: {data: {visibility_target: "nameInput"}} %>

    <%= f.input :nationality,
                label: 'Player Nationality',
                placeholder: "Player Nationality",
                required: true %>

    <%= f.input :birthdate,
                label: 'Player Birthdate',
                placeholder: "Player Birthdate",
                required: true,
                start_year: Time.now.year - 123, end_year: Time.now.year - 18, order: %i(year) %>

        <%= f.input :gender, collection: ['Female', 'Male'] %>
        <%= f.input :handedness, collection: ['Left-Handed', 'Right-Handed'] %>
        <%= f.input :position, collection: ['Field Player', 'Goalkeeper'] %>
        <%= f.input :description, as: :text, :input_html => { 'rows' => 1 } %>
        <%= f.input :photo, as: :file %>
        <%= f.association :team, prompt: 'Team', label: false,
                            collection: current_user.teams %>

        <%= f.input :available %>

    </div>
    <%= f.submit "Create Player", class: 'btn btn-primary' %>
    <% end %>
  </div>
